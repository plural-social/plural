{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@plural-town/ability": ["libs/acl/ability/src/index.ts"],
      "@plural-town/acl-models": ["libs/acl/models/src/index.ts"],
      "@plural-town/activitystreams-validator": ["libs/activitystreams-validator/src/index.ts"],
      "@plural-town/exec-queue": ["libs/queue/exec/src/index.ts"],
      "@plural-town/next-ability": ["libs/acl/next/src/index.ts"],
      "@plural-town/queue-core": ["libs/queue/core/src/index.ts"],
      "@plural-town/queue-worker": ["libs/queue/worker/src/index.ts"],
      "@plural/db": ["libs/db/src/index.ts"],
      "@plural/email-tasks": ["libs/tasks/email/src/index.ts"],
      "@plural/form": ["libs/form/src/index.ts"],
      "@plural/log": ["libs/log/src/index.ts"],
      "@plural/models": ["libs/models/src/index.ts"],
      "@plural/schema": ["libs/schema/src/index.ts"],
      "@plural/tasks/fetch": ["libs/tasks/fetch/src/index.ts"],
      "@plural/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
